#!/usr/bin/env node
'use strict';

const childProcess = require('child_process');
const path = require('path');
const process = require('process');

const args = process.argv.slice(2);

childProcess.spawnSync(path.join(__dirname, 'npx'), ['babel', ...args], { stdio: 'inherit' });

