  args+=("plugin")

  if [[ -f "$(pwd)/plugin/jest.config.js" ]]; then
    args+=("--config")
    args+=("plugin/jest.config.js")
  fi

  # Push the rest of the arguments minus the `plugin` arg
  args+=("${@:2}")
fi

if [[ -t 1 && (-z "$CI" && -z "$EXPO_NONINTERACTIVE") ]]; then
  args+=("--watch")
fi

